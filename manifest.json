{
  "manifest_version": 3,
  "name": "No on TV",
  "version": "1.0.0.3",
  "description": "Disables the 'Play on TV' button to help prevent accidental casting to your TV.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}